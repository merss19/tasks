@import '../../../assets/styles/common'

.tasks
	&__top
		margin:0

		.md-errors-spacer
			display: none

		&-drop
			display: inline-block
		&.icons8-search
			&:before
				position: absolute
				left: 17px;
				top: 10px;
				font-size: 30px;
				color: color-grey

	&__btn
		&.md-button.md-raised:not([disabled])
			position: absolute
			right: 0
			box-shadow none
			margin: 0;
			top: 9px;
			min-width: 62px;

		&-icon
			line-height:25px

			&:before
				font-size: 26px;
				color: #9e9e9e
	&__input
		&.md-input
			height: 49px
			border-color: color-grey

	&__content
		overflow: auto

	&__list
		margin-top: 7px

	&__item
		padding: 12px 0

	&__add
		&.md-button.md-fab
			position: absolute
			bottom: 24px;
			right: 22px;
			width: 50px
			height: 50px

		.icons8-plus
			font-size: 30px

	&__no-match
		color: color-add

		.icons8-todo-list
			text-align: center;

			&:before
				font-size: 200px

		&-wrapper
			margin: -62px 0 0 0

		&-text
			font-size: 26px
			margin-top: 36px
